<form method="POST">
    <h1>
        <%= update.message %>
    </h1>
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" value="<%= update.user.name %>" name="name">
    </div>
    <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" class="form-control" id="email" value="<%= update.user.email %>" name="email">
    </div>
    <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" class="form-control" id="password" name="password" value="<%= update.user.password %>">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>